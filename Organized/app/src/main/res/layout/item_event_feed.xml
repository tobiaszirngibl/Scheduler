<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/new_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/new_event_element_title_margin_top"/>

    <TextView
        android:id="@+id/new_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_event_title"
        android:layout_marginTop="@dimen/new_event_element_title_margin_top"/>

    <TextView
        android:id="@+id/new_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_event_location"
        android:layout_marginLeft="@dimen/new_event_element_date_margin_left"
        android:layout_marginStart="@dimen/new_event_element_date_margin_left"/>

    <TextView
        android:id="@+id/new_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_event_date"
        android:layout_marginLeft="@dimen/new_event_element_time_margin_left"
        android:layout_marginStart="@dimen/new_event_element_date_margin_left"/>

    <TextView
        android:id="@+id/new_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_event_time"
        android:layout_marginBottom="@dimen/new_event_element_desc_margin_bot"/>

    <ImageButton
        android:layout_width="@dimen/new_event_element_accept_button_width"
        android:layout_height="@dimen/new_event_element_accept_button_width"
        android:layout_toLeftOf="@+id/new_event_decline_button"
        android:layout_toStartOf="@+id/new_event_decline_button"
        android:layout_alignBottom="@+id/new_event_decline_button"
        android:id="@+id/new_event_accept_button"
        android:contentDescription="@string/event_feed_decline_btn_desc"
        android:src="@drawable/accept_button_icon"
        android:background="#0000"/>

    <ImageButton
        android:layout_width="@dimen/new_event_element_accept_button_width"
        android:layout_height="@dimen/new_event_element_accept_button_width"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/new_event_description"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/new_event_decline_button"
        android:contentDescription="@string/event_feed_accept_btn_desc"
        android:src="@drawable/decline_button_icon"
        android:layout_margin="@dimen/new_event_element_accept_button_margin"
        android:background="#0000"/>
</RelativeLayout>