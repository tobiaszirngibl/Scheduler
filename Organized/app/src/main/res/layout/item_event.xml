<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/event_title_margin_top"
        android:textSize="20sp" />

    <ImageButton
        android:layout_width="@dimen/new_event_element_accept_button_width"
        android:layout_height="@dimen/new_event_element_accept_button_width"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/delete_event_button"
        android:contentDescription="@string/delete_btn_desc"
        android:src="@drawable/decline_button_icon"
        android:onClick="deleteEvent"
        android:layout_margin="@dimen/event_delete_button_margin"
        android:background="#0000"/>
</RelativeLayout>